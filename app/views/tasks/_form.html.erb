<div class="container p-5 form-bg">
    <%= simple_form_for(@task, html: { class: 'form-horizontal' }) do |f| %>
  <div class="mb-3">
    <%= f.label :category_id, class: 'form-label' %>
    <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a Category" }, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.input :title, label: false, input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.input :description, label: false, input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.label :company, class: 'form-label' %>
    <%= f.input :company, label: false, input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.label :url, class: 'form-label' %>
    <%= f.input :url, label: false, input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
